<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
  xmlns:odl="http://opendaylight.org/xmlns/blueprint/v1.0.0"
  odl:use-default-for-reference-types="true">

  <reference id="dataBroker"
    interface="org.opendaylight.controller.md.sal.binding.api.DataBroker"
    odl:type="default" />

  <bean id="cliCommandsImpl" class="com.highstreet.technologies.odl.app.cli.impl.ClosedLoopAutomationCliCommandsImpl">
    <argument ref="dataBroker" />
  </bean>
  <service ref="cliCommandsImpl" odl:type="default"
    interface="com.highstreet.technologies.odl.app.cli.api.ClosedLoopAutomationCliCommands" />

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
        <command name="test-command">
            <action class="com.highstreet.technologies.odl.app.cli.commands.ClosedLoopAutomationCliTestCommand">
                <argument ref="cliCommandsImpl"/>
            </action>
        </command>
    </command-bundle>
</blueprint>
